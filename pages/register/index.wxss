/* pages/register/index.wxss */.logo {
    margin-top: 10rpx;
    margin-bottom: 40rpx;
    text-align: center;
    font-size: 50rpx;
    color: #378dbb;
  }

.login {
    margin-top: 57.3rpx;
  }

.login .item {
    padding: 10rpx 50rpx;
}

.login .item .input {
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 20rpx;
    border: 2rpx solid #378dbb;
    text-align: center;
}

.login .item .btn {
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 20rpx;
    border: 2rpx solid #378dbb;
    background-color: #378dbb;
    color: #fff;
}

/* 上传人脸 */
.login .item .face {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.login .item .face .image {
  width: 400rpx;
  height: 300rpx;
  border: 2rpx solid #378dbb;
  border-radius: 10rpx;
}

.fs {
    font-size: 40rpx;
}

.href {
    text-align: right;
    padding-top: 20rpx;
    padding-right: 70rpx;
    color: #378dbb;
}

/* 照相机 */
.cameraBox{
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
}
.viewBox{
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1000;
  display: flex;
  align-items: stretch;
  flex-direction:column;
}
/* 顶部设置导航 */
.cameraTab{
  position: fixed;
  left: 0;
  top: 0;
  width: 94vw;
  height: 12vw;
  padding: 0 3vw;
  background-color: rgba(0,0,0,.8);
  z-index: 1000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color:#fff;
}
.cameraTab .tabImg{
  width:7vw;
  height:7vw;
}
.content{
  width:100vw;
  height:100vw;
  position: relative;
}
/* 相机遮罩图片 */
.faceImg{
  width:100vw;
  height:100vw;
  padding:0;
  margin:0;
}
/* 圆圈 */
.circle{
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
  width:80vw;
  height:80vw;
  border-radius: 50%;
  border:10rpx solid #ccc;
}
/* 拍照按钮 */
.photographBtn{
  position: fixed;
  left: 50%;
  bottom:5vw;
  transform: translate(-50%,-50%);
  z-index: 10000;
  width:120rpx;
  height:120rpx;
  padding:0;
  margin:0;
  border-radius: 50%;
  background-color: red;
  border:10rpx solid #eee;

  display: flex;
  align-items: center;
  justify-content: center;
}
.photographBtn .cameraImg{
  width:70rpx;
  height:70rpx;
}
