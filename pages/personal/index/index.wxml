<!--pages/personal/index/index.wxml-->
<!-- <view style="min-height: 92vh;"> -->
<view>
	<view class="box">
		<view class="change" wx:if="{{typestring}}">
			<view>{{typestring}}</view>
		</view>
		<view class="user" wx:if="{{wxInfo}}">
			<image class="avator" src="{{wxInfo.avatarUrl}}" style="border:8rpx solid #fff;"></image>
			<text class="nickname">{{wxInfo.nickName}}</text>
		</view>
		<view class="user" wx:else>
			<!-- <text class="nickname">未登录</text> -->
			<image class="avator" src="/icon/qb.png" style="border:8rpx solid #fff;"></image>
			<button size="mini" open-type="getUserInfo" bindgetuserinfo="getUserInfo" bindtap="toWriteInfo">立即登录</button>
		</view>
	</view>
	<block wx:if="{{show}}">
		<!-- <view wx:if="{{isExpire}}" class="tips">服务将于{{expireTime}}到期<text wx:if="{{isRenew}}">, 请及时续费</text></view> -->
		<view wx:for="{{hasBuyList}}" class="tips" style="color: green">{{item.name}}将于{{item.expireTime}}到期<text wx:if="{{item.state == 1 ? true : false}}">, 请及时续费</text></view>

		<view wx:if="{{hasBuyList.length == 0}}" class="tips">未购买任何服务</view>
	</block>
	<view class="plate">
		<view class="title">信息板块</view>
		<view class="list">
			<view bindtap="toInfomation">
				<image src="/icon/information.png" />
				<text>警员信息</text>
			</view>
			<view bindtap="toHouse">
				<image src="/icon/suspicious_face.png" />
				<text>可疑人脸</text>
			</view>
		</view>
	</view>

	<view class="plate">
		<view class="title">设备</view>
		<view class="list">
			<view bindtap="toRegister">
				<image src="/icon/rke.png" />
				<text>门禁机</text>
			</view>
			<view bindtap="loginout">
				<image src="/icon/Capture.png" />
				<text>抓拍枪</text>
			</view>
	</view>
</view>
</view>

<view class="supportText">智能乡村提供技术支持v1.0.0</view>