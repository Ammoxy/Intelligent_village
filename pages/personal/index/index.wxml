<view>
	<view class="box">
		<view class="user_log" wx:if="{{userInfo}}">
			<block wx:if="{{open_face}}">
				<view class="user_img">
					<image mode="aspectFill" class="avator" src="{{userInfo.face_image}}" style="border:4rpx solid #fff;"></image>
				</view>
			</block>
			<view class="user_content">
				<view class="user_nickname">姓名：{{userInfo.name}}</view>
				<view class="user_nickname">工号: {{userInfo.number}}</view>
				<view class="user_nickname">辖区：{{userInfo.station.name}}</view>
			</view>
		</view>
		<view class="user" wx:else>
			<image class="avator" src="/icon/qb.png" style="border:8rpx solid #fff;"></image>
			<button size="mini" bindtap="toLogin">立即登录</button>
		</view>
	</view>

	<view class="plate">
		<view class="title">信息板块</view>
		<view class="list">
			<view bindtap="toInfomation">
				<image src="/icon/information.png" />
				<text>警员信息</text>
			</view>
			<view bindtap="toDubious">
				<image src="/icon/suspicious_face.png" />
				<text>可疑人脸</text>
			</view>
			<view bindtap="changeUser">
				<image src="/icon/close.png" />
				<text>切换账号</text>
			</view>
		</view>
	</view>

	<view class="plate">
		<view class="title">设备</view>
		<view class="list">
			<!-- <picker bindchange="accessChange" value="{{index}}" range-key="name" range="{{areaList}}"> -->
			<view bindtap="toDevice">
				<image src="/icon/rke.png" />
				<text>设备信息</text>
			</view>
			<!-- </picker> -->
		</view>
	</view>
