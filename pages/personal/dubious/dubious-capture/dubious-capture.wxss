.alert {
  width: 100vw;
  height: 100vh;
  overflow-y: auto;
  background-color: #fff;
}

.table {
  position: relative;
  border: 0rpx solid darkgray;
}

.tr {
  display: flex;
  justify-content: center;
  height: 8vh;
  align-items: center;
}



.bg-w {
  position: absolute;
  left: 0;
  top: 0;
  /* background: snow; */
  background: #003366;
  color: #ccc;
}

/*   
.bg-g {
  background: #003366;
