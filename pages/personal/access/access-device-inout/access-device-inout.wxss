.date {
  display: flex;
  justify-content: space-around;
  align-items: center;

  padding: 10rpx;
  border-bottom: 2rpx solid #ccc;
}

.date .input {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 10rpx;
  border: 2rpx solid #378dbb;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.table {
  width: 100vw;
  height: 83vh;
  font-size: 36rpx;
  /* overflow-y: auto; */
}

.table .tr {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 10vh;
}

.detail {
  height: 73vh;
  overflow-y: auto;
}

.table .tr .th,
.table .tr .td {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 10vh;
  white-space: nowrap;
  border: 2rpx solid #ccc;
}

.table .tr .td {
  color: #fff;
}

.table .bg {
  height: 10vh;
  background: #378dbb;
}

.td image {
  width: 100rpx;
  height: 100rpx;
}

/* 分页 */
.paging {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 30rpx 5rpx;
  font-size: 36rpx;

}

.paging .page-item {
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #378dbb;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.paging .input {
  width: 150rpx;
  padding-left: 10rpx;
}