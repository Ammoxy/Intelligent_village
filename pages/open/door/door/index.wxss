.form {
    padding: 0 20rpx;
    background-color: #fff;
}

.form-item {
    position: relative;
    padding: 25rpx 40rpx 25rpx 0;
    border-bottom: 2rpx solid #dcdcdc;
    background-color: #fff;
    color: #666;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 35rpx;
}

.form-item view {
    width: 400rpx;
    text-align: right;
}

.form-item text {
    width: 200rpx;
    font-size: 32rpx;
    margin-left: 14rpx;
}

